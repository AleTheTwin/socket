{
  "name": "socket",
  "productName": "socket",
  "version": "1.0.0",
  "description": "Share files with devices from your local network",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "test": "node src/test.js",
    
    "package-linux": "electron-packager . --overwrite --asar=true --platform=linux --arch=x64 --prune=true --out=out --icon src/icons/icon.png",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=x64 --prune=true --out=out --icon src/icons/icon.png",
    "package-debian": "electron-installer-debian --src out/socket-linux-x64/ --arch amd64 --dest out --icon src/icons/icon.png"
  },
  "keywords": [],
  "author": {
    "name": "AleTheTwin",
    "email": "alethetwin@icloud.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/icons/icon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "socket"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@dicebear/adventurer": "^4.10.1",
    "@dicebear/avatars": "^4.10.1",
    "axios": "^0.24.0",
    "config": "^3.3.6",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "form-data": "^4.0.0",
    "got": "^11.8.3",
    "local-devices": "^3.2.0",
    "node-port-scanner": "^3.0.1",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "electron": "^16.0.2"
  }
}
